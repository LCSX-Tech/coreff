<?xml version="1.0"?>
<odoo>

	<record id="coreff_creditsafe_createfrom_wizard" model="ir.ui.view">
		<field name="name">coreff_creditsafe_createfrom_wizard</field>
		<field name="model">coreff_creditsafe_createfrom_wizard</field>
	 <field name="arch" type="xml">
            <form string="Set SIRET company">
                <p class="oe_gray" >
					Set SIRET to create the company 
                </p>
                <group>
                    <field name="siren" />
                    <field name="nic" />
                </group>
                <footer>
                    <button name="open_view" string="Valider" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
	</record>

   <!-- Wizard Action --> 

  <act_window id="coreff_creditsafe_wizard"
    name="Create company from SIRET"
    src_model="coreff_creditsafe_createfrom_wizard" res_model="res.partner" 
    view_mode="form" target="new" multi="True" />
	

</odoo>
