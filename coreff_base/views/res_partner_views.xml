<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record model="ir.ui.view"
    id="coreff_partner_form">
    <field name="name">coreff.partner.form</field>
    <field name="model">res.partner</field>
    <field name="inherit_id"
      ref="base.view_partner_form" />
    <field name="arch"
      type="xml">
      <xpath expr="//div[hasclass('oe_title')]"
        position="after">
        <p id="alert_coreff"
          class="alert alert-warning"
          role="alert"
          style="display: none;" />
      </xpath>

      <xpath expr="//div[hasclass('oe_title')]/h1/field[@id='company']" position="replace">
        <field id="company" widget="field_coreff_autocomplete" autocomplete="new-password" options="{'headOffice': True}" name="name" default_focus="1" placeholder="Company Lookup..." attrs="{'required' : [('type', '=', 'contact'),('is_company', '=', True)], 'invisible': [('is_company','=', False)]}"/>
      </xpath>
      <xpath expr="//div[hasclass('oe_title')]/h1/field[@id='individual']" position="replace">
        <field id="individual" widget="field_coreff_autocomplete" autocomplete="new-password" options="{'headOffice': True}" name="name" default_focus="1" placeholder="Company Lookup..." attrs="{'required' : [('type', '=', 'contact'),('is_company', '=', False)], 'invisible': [('is_company','=', True)]}"/>
      </xpath>

      <xpath expr="//field[@name='name']/.."
        position="after">
        <group string="Coreff">
          <!-- <field string="Lookup" widget="field_coreff_autocomplete" autocomplete="new-password" options="{'headOffice': True}" name="name" attrs="{'invisible': ['|',('is_company', '=', False),('coreff_company_code', '!=', False)]}"/> -->
          <field name="coreff_company_code_mandatory"
            invisible="1" />
          <field name="coreff_company_code"
            string="Company Code"
            widget="field_coreff_autocomplete"
            options="{'headOffice': True}"
            placeholder="Company Code..."
            attrs="{'invisible': [('is_company', '=', False)], 'required': [('coreff_company_code_mandatory','=',True)]}" />
        </group>
      </xpath>
    </field>
  </record>

</odoo>